output-format: json

strictness: high
test-warnings: true
doc-warnings: true
member-warnings: true

inherits:
  - default

ignore-paths:
  - docs

autodetect: true
max-line-length: 79

bandit:
  run: true
  options:
    config: .bandit.yml

dodgy:
  run: true

frosted:
  disable:
    - E103
    - E306

mccabe:
  run: false
  options:
    max-complexity: 10

pep8:
  disable:
    - W602
    - W603
  enable:
    - W601
  options:
    max-line-length: 79

pep257:
  disable:
    - D100
    - D101

pyflakes:
  disable:
    - F403
    - F810

pyroma:
  disable:
    - PYR15
    - PYR18

mypy:
  run: true
  options:
    ignore-missing-imports: true
    follow-imports: skip

vulture:
  run: true
